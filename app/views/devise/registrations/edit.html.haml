.row
  .twelve.columns
    %h2 Your Profile
    %dl.tabs.contained
      %dd.active= link_to 'Your Account', edit_user_registration_path
    %ul.tabs-content.contained
      %li.active
        = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'narrowform' } do |f|
          .form-inputs
            = f.input :email, required: true, autofocus: true
            = f.input :name, required: true
            = f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false
            = f.input :password_confirmation, required: false
            = f.input :current_password, hint: "We need your current password to confirm your changes", required: false
          .form-actions
            = f.button :submit, "Save"