- unless @apps.present?
  .moduleContainer.threeCol
    %p Apps not found
- else
  - @apps.each_slice(3) do |apps_row|
    .moduleContainer.threeCol
      - apps_row.each do |app|
        %section.module
          - if app.icon.present?
            .icon= image_tag app.icon
          .text
            %h5= link_to app.title, app
            %p= app.author
          %p= truncate(app.description, :length => 100)
          - if app.home_page_url
            = link_to 'App Home Page Â»', app.home_page_url