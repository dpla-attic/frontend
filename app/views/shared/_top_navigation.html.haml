%ul

  %li.hilight
    = link_to 'Donate', wordpress_path('/donate/')
  - if user_signed_in?
    %li.welcome
      = link_to edit_user_registration_path do
        Welcome,
        = current_user.name
    %li.signOut.bg.last= link_to "Sign out", destroy_user_session_path
  - else
    %li.login.bg
      = link_to 'Login', new_user_session_path, class: 'login cBoxElement'
    %li.signUp.bg.last
      = link_to 'Sign Up', new_user_registration_path, class: 'signUp cBoxElement'
