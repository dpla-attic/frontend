%ul
  %li.aboutMenu
    = link_to wordpress_path '/about' do
      About
      %span.icon-arrow-thin-down{"aria-hidden" => "true"}
    %ul
      %li= link_to "Overview", '#'
      %li= link_to "Leadership", '#'
      %li= link_to "Workstreams", '#'
      %li= link_to "For developers", '#'
      %li= link_to "Get involved", '#'


  %li= link_to 'News', "#"
  %li= link_to 'Contact', "#"
  - if user_signed_in?
    %li
      = link_to edit_user_registration_path do
        Welcome,
        = current_user.name
    %li.bg.last= link_to "Sign out", destroy_user_session_path
  - else
    %li.bg
      %a.login.cBoxElement{href: "#loginBox"} Login
    %li.bg.last
      %a.signUp.cBoxElement{href: "#signupBox"} Sign Up