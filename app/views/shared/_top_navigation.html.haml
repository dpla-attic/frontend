%ul
  %li.aboutMenu
    = link_to wordpress_path '/about' do
      About
      %span.icon-arrow-thin-down{"aria-hidden" => "true"}
    %ul
      %li= link_to "History", wordpress_path('/about/history')
      %li= link_to "Who we are", wordpress_path('/about/who')
      %li= link_to "Organization", wordpress_path('/about/org')
      %li= link_to "Funding", wordpress_path('/about/funding')
      %li= link_to "FAQ", wordpress_path('/about/faq')

  %li.aboutMenu
    = link_to wordpress_path '/get-involved' do
      Get Involved
      %span.icon-arrow-thin-down{"aria-hidden" => "true"}
    %ul
      %li= link_to "Partnerships", wordpress_path('/get-involved/partnerships')
      %li= link_to "Events", wordpress_path('/get-involved/events')
      %li= link_to "Forums", wordpress_path('/get-involved/forums')

  %li.aboutMenu
    = link_to wordpress_path '/developers' do
      For Developers
      %span.icon-arrow-thin-down{"aria-hidden" => "true"}
    %ul
      %li= link_to "API Codex", wordpress_path('/developers/codex')

  %li= link_to "Help", wordpress_path('/help')

  %li.aboutMenu
    = link_to wordpress_path '/news' do
      Follow
      %span.icon-arrow-thin-down{"aria-hidden" => "true"}
    %ul
      %li= link_to "Blog", wordpress_path('/news/blog')
      %li= link_to "Press", wordpress_path('/news/press')

  %li= link_to 'Contact', wordpress_path('/contact')
  - if user_signed_in?
    %li
      = link_to edit_user_registration_path do
        Welcome,
        = current_user.name
    %li.bg.last= link_to "Sign out", destroy_user_session_path
  - else
    %li.bg
      = link_to 'Login', new_user_session_path, class: 'login cBoxElement'
    %li.bg.last
      = link_to 'Sign Up', new_user_registration_path, class: 'signUp cBoxElement'