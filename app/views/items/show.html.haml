.layout
  %section.searchRow
    .searchRowLeft
      - unless session[:last_query].nil?
        = link_to "« back to searh results", session[:last_query]
    .searchRowRight
      .searchViews
        %span View:
        %ul
          %li.active
            %a{:href => ""}
              %span.icon-view-list{"aria-hidden" => "true"}
          %li
            %a.viewTwo{:href => ""}
              %span.icon-view-map{"aria-hidden" => "true"}
          %li
            %a.viewThree{:href => ""}
              %span.icon-view-time{"aria-hidden" => "true"}
      %a.search-btn{:href => ""} Search
      = form_tag(search_items_path, method: :get, authenticity_token: false) do
        = preserved_search_fields without: :q
        = text_field_tag :q, params[:q], placeholder: 'Search the Library'
        = submit_tag 'Search', class: 'searchBtn', name: nil

  %h1= @item.title
  %article
    .FeatureContent
      .contentBox
        = image_tag("http://54.245.27.141:3000/dpla-html-130125/img/image.jpg")
      .table
        %ul
          %li
            %h6 Creator
          %li= @item.creator
        %ul
          %li
            %h6 Created date
          %li= @item.created
        %ul
          %li
            %h6 Owning institution
          %li
        %ul
          %li
            %h6 Provider
          %li
        %ul
          %li
            %h6 Publisher
          %li= @item.publisher

      .detail-bottom
        %h6 Description
        %p= @item.description

    .table
      %ul
        %li
          %h6 Location
        %li= @item.spatial
      %ul
        %li
          %h6 Format
        %li= @item.format
      %ul
        %li
          %h6 Type
        %li= @item.type
      %ul
        %li
          %h6 Subject
        %li= @item.subject
      %ul
        %li
          %h6 Rights
        %li= @item.rights
      %ul
        %li
          %h6 URL
        %li= link_to @item.source, @item.source

  %aside
    .module.yellow
      .moduleSection
        .moduleLeft
          %h6 Created date
          %p= @item.created
          %a View on timeline »
        .moduleRight
          = image_tag("http://54.245.27.141:3000/dpla-html-130125/img/image.jpg")
      .moduleSection
        .moduleLeft
          %h6 Location
          %p= @item.spatial
          %a View on map »
        .moduleRight
          = image_tag("http://54.245.27.141:3000/dpla-html-130125/img/image.jpg")
    .module
      %h6 From the colection
      %h5
        %a
      %p Description of this collection
