.layout.fullWidth
  = render 'shared/search_panel'

  %article
    %h1 Your Profile
    .profile
      %ul.tabs
        %li.active= link_to 'Your account', edit_user_registration_path
        %li= link_to 'Saved Items & Lists', saved_lists_path
        %li= link_to 'Saved searches', saved_searches_path
      .tab-content
        .account
          = simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
            = f.input :email, required: true, autofocus: true
            = f.input :name, required: true
            = f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false
            = f.input :password_confirmation, required: false
            = f.input :current_password, hint: "We need your current password to confirm your changes", required: false
            %br
            %a.btn{:href => ""} Save