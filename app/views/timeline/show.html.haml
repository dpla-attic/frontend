.layoutTwo.timeline
  = render 'shared/search_panel'

  %h1 Timeline
  = render 'shared/results/search_results', query: params[:q], search: @search
  - if @search.count > 0
    = render 'shared/refine_control'

    / Main container
    - aside_collapsed = params[:controller] != 'search'
    .timeContainer.decadesView{class: aside_collapsed ? 'widthL' : 'widthS'}
      %article.timeline
        / Century timeline
        = render 'timeline_module'

        .timelineView
          View:
          %a.selected.DecadesTab{href:"#"} Decades
          %a.yearTab{href:"#"} Years

        / Decades
        .Decades
          %span.next
          %span.prev
          .DecadesDates
            = graph_dates

          .graph
            = graph @timeline.years

        / Years
        .timelineContainer
          - 5.times do
            = render 'empty_page'

    = render 'shared/sidebar'

:javascript
  window.api_search_path = '#{@api_search_path}';
  window.api_item_path   = '#{@api_item_path}';