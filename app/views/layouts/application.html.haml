:plain
  <!--[if gt IE 8] -->
%html{lang: "en"}
  /<![endif]
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width", name: "viewport"}
    %title DPLA
    /[if lt IE 9]
      = javascript_include_tag "html5shiv"
    = javascript_include_tag "application"
    = stylesheet_link_tag    "application", media: "all"
    = csrf_meta_tags
  %body
    .row.header
      .twelve.columns
        %ul.button-group.even.right.login-buttons
          %li
            %a.button.small{href: "#", "data-reveal-id" => "login-modal"} Log In
          %li
            %a.button.small{href: "#", "data-reveal-id" => "signup-modal"} Sign Up
        %ul.nav-bar.ancillary.right
          %li.has-flyout
            %a{href: "about.html"} About
            %a.support.attribute.flyout-toggle{href: "#"}
            %ul.flyout
              %li
                %a{href: "about.html"} Overview
              %li
                %a{href: "#"} Leadership
              %li
                %a{href: "#"} Workstreams
              %li
                %a{href: "#"} Workstreams
              %li
                %a{href: "#"} For Developers
              %li
                %a{href: "#"} Get Involved
          %li
            %a{href: "#"} News
          %li
            %a{href: "#"} Contact
        %h2
          = link_to root_path, title: 'Digital Public Library of America' do
            - image_tag 'logo-gray.png', alt: 'DPLA'
        = render_navigation context: :main, html: {class: "nav-bar"}
    = yield
    %footer.row
      .twelve.columns
        %hr/
        .row
          .twelve.columns
            .social.right
              = image_tag "facebook.png"
              = image_tag "twitter.png"
            %ul.link-list.left
              %li
                %a{href: "#"} Home
              %li
                %a{href: "#"} Subjects
              %li
                %a{href: "#"} Collections
              %li
                %a{href: "#"} Exhibitions
              %li
                %a{href: "#"} Map
              %li
                %a{href: "#"} Timeline
              %li
                %a{href: "#"} App Library
              %li
                %a{href: "#"} Help
              %li
                %a{href: "#"} About
              %li
                %a{href: "#"} News
              %li
                %a{href: "#"} Contact
              %li
                %a{href: "#"} Accessibility
    #login-modal.reveal-modal
      %h3 Log In
      %form{action: "home-loggedin.html"}
        %label Username
        %input{type: "text"}/
        %label Password
        %input{type: "password"}/
        %input.postfix.button{type: "submit", value: "Log In"}/
        %p
          %a.right{href: "#"} Forgot password?
    #signup-modal.reveal-modal
      %h3 Sign Up
      %p Text about benefits of creating an account. Text about benefits of creating an account.
      %p
        %span.red *
        \= required
      %form{action: "home-loggedin.html"}
        %label
          Email address
          %span.red *
        %input{type: "text"}/
        %label
          Choose a username
          %span.red *
        %input{type: "text"}/
        %label
          Choose a password
          %span.red *
        %input.no-marg-bot{type: "password"}/
        %p.gray Must be at least 8 characters.
        %label
          Repeat password
          %span.red *
        %input{type: "password"}/
        %input.postfix.button{type: "submit", value: "Sign Up"}/
    :javascript
      $(window).load(function(){
        $("#featured").orbit();
      });
